{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"test/**/*"
	],
	"compilerOptions": {
		"target": "ES2022",
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declarationDir": "dist",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	}
}
