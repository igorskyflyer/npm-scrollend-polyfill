{
	"include": ["src/**/*", "test/server.mjs"],
	"exclude": ["node_modules/**/*", "test/**/*"],
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"noEmit": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	}
}
